<p id="notice"><%= notice %></p>

<h1>Pessoas</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Pai</th>
      <th>Mae</th>
      <th>Cpf</th>
      <th>Rg</th>
      <th>Data nascimento</th>
      <th>Endereco</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pessoas.each do |pessoa| %>
      <tr>
        <td><%= pessoa.nome %></td>
        <td><%= pessoa.pai %></td>
        <td><%= pessoa.mae %></td>
        <td><%= pessoa.cpf %></td>
        <td><%= pessoa.rg %></td>
        <td><%= pessoa.data_nascimento %></td>
        <td><%= pessoa.endereco.rua + " - " + pessoa.endereco.numero %></td>
        <td><%= link_to 'Show', pessoa %></td>
        <td><%= link_to 'Edit', edit_pessoa_path(pessoa) %></td>
        <td><%= link_to 'Destroy', pessoa, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

